<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_offerte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mcteam.gestapp.Moduli.Commerciale.Offerte.OfferteActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/offerte_comm_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/offerte_header" />

    <LinearLayout
        android:id="@+id/offerte_header"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/commerciale_home_background"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView191"
            android:layout_width="105dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="Cliente"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView195"
            android:layout_width="105dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="13dp"
            android:gravity="center_vertical"
            android:text="Codice"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView199"
            android:layout_width="105dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="Nome Commessa"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/offerte_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="false"
        android:visibility="visible" />


</RelativeLayout>
