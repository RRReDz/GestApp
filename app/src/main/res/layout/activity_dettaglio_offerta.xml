<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dettaglio_offerta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mcteam.gestapp.Moduli.Commerciale.Offerte.DettaglioOffertaActivity">

    <LinearLayout
        android:id="@+id/dett_off_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/commerciale_home_background">

            <RelativeLayout
                android:id="@+id/dettaglio_offerta_commessa_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/dettaglio_offerta_fields"
                android:layout_toRightOf="@+id/dettaglio_offerta_fields"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nome_commessa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome commessa"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/codice_commessa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/nome_commessa"
                    android:gravity="center_vertical"
                    android:text="Codice commessa"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/codice_commessa"
                    android:text="Cliente"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/consulente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/cliente"
                    android:text="Consulente"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/rif_commessa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/consulente"
                    android:text="Rif. commessa"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/dett_off_head_codcomm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dett_off_head_cliente"
                    android:layout_alignStart="@+id/dett_off_head_cliente"
                    android:layout_below="@+id/dett_off_head_nomecomm"
                    android:text="Codice commessa"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dett_off_head_nomecomm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dett_off_head_codcomm"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/dett_off_head_codcomm"
                    android:gravity="center_vertical"
                    android:text="Nome Commessa"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dett_off_head_consul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dett_off_head_cliente"
                    android:layout_marginLeft="37dp"
                    android:layout_marginStart="37dp"
                    android:layout_toEndOf="@+id/codice_commessa"
                    android:layout_toRightOf="@+id/codice_commessa"
                    android:gravity="center_vertical"
                    android:text="Consulente"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dett_off_head_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dett_off_head_consul"
                    android:layout_alignStart="@+id/dett_off_head_consul"
                    android:layout_below="@+id/dett_off_head_codcomm"
                    android:text="Cliente"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dett_off_head_refcomm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dett_off_head_consul"
                    android:layout_alignStart="@+id/dett_off_head_consul"
                    android:layout_below="@+id/dett_off_head_consul"
                    android:gravity="center_vertical"
                    android:text="Ref Commessa"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dett_off_label_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout14"
            android:background="@drawable/view_borders"
            android:visibility="gone">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="versione" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="data" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="presentata" />

            <TextView
                android:id="@+id/textView145"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="allegato" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dettaglio_offerta_empty"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/linearLayout14"
            android:background="@drawable/view_borders"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="ATTENZIONE! Non esistono offerte annesse a tale commessa."
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/offerte_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/dett_off_header" />

    <View
        android:id="@+id/dett_off_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dett_off_header"
        android:background="@color/transparent_white"
        android:visibility="gone" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fabmenu_offerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        app:fab_addButtonColorNormal="@color/commerciale_home_background"
        app:fab_labelStyle="@style/menu_labels_style"
        app:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_offerta_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_search_white_24dp"
            app:fab_size="mini"
            app:fab_title="Ricerca Avanzata" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_offerta_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_print_white_36dp"
            app:fab_size="mini"
            app:fab_title="Stampa tutto" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_offerta_excel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_grid_on_white_24dp"
            app:fab_size="mini"
            app:fab_title="Esporta in Excel" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_offerta_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onClickAddOfferta"
        android:visibility="gone"
        app:fab_colorNormal="@color/sistemi_home_background"
        app:fab_icon="@drawable/ic_add_white_24dp"
        app:fab_size="normal"
        app:fab_title="Exporta in Excel" />

    <ProgressBar
        android:id="@+id/dett_offerte_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="false"
        android:max="5"
        android:progress="0" />

</RelativeLayout>
