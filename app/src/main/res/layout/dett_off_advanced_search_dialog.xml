<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/versione_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <EditText
            android:id="@+id/versione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Versione"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@android:color/black" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/data_offerta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/versione_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:onClick="onClickSelData"
        android:hint="Data offerta"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@android:color/black" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/presentata_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_offerta"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <EditText
            android:id="@+id/presentata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Presentata"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@android:color/black" />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>