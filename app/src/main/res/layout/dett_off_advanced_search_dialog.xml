<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/versione_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <EditText
            android:id="@+id/versione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Versione"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@android:color/black" />

    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/data_offerta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/versione_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:focusable="false"
        android:hint="Data offerta"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textview_presentata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/data_offerta"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:hint="Presentata"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@android:color/black" />

    <Spinner
        android:entries="@array/presentata_values"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/presentata"
        android:layout_alignBaseline="@+id/textview_presentata"
        android:layout_alignBottom="@+id/textview_presentata"
        android:layout_alignRight="@+id/data_offerta"
        android:layout_alignEnd="@+id/data_offerta" />

</RelativeLayout>